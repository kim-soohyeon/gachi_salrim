<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/back_color"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/toolbarTheme"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        <Button
            android:id="@+id/findAdr_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:fontFamily="@font/nanum"
            android:layout_gravity="center"
            android:textColor="#000000"
            android:textSize="20dp" />

    </androidx.appcompat.widget.Toolbar>

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <TextView
            android:id="@+id/loadingMessage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="로딩중..."/>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:background="#555"
            android:layout_marginLeft="2.5dp"
            android:layout_marginRight="2.5dp"/>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0.5dp"
        android:gravity="center"
        android:orientation="horizontal">


        <Button
            android:id="@+id/map_btn"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:drawableTop="@drawable/ic_map_black_24dp"
            android:paddingTop="20dp"
            android:fontFamily="@font/nanum"
            android:text="지도로 보기" />

        <View
            android:layout_width="0.3dp"
            android:layout_height="80dp"
            android:background="#555"
            android:layout_marginLeft="2.5dp"
            android:layout_marginRight="2.5dp"/>

        <Button
            android:id="@+id/list_btn"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_format_list_bulleted_black_24dp"
            android:background="@color/transparent"
            android:paddingTop="15dp"
            android:fontFamily="@font/nanum"
            android:text="리스트 보기" />

        <View
            android:layout_width="0.3dp"
            android:layout_height="80dp"
            android:background="#555"
            android:layout_marginLeft="2.5dp"
            android:layout_marginRight="2.5dp"/>

        <Button
            android:id="@+id/favorite_btn"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:drawableTop="@drawable/ic_star_black_24dp"
            android:paddingTop="20dp"
            android:fontFamily="@font/nanum"
            android:text="내 지역" />

        <View
            android:layout_width="0.3dp"
            android:layout_height="80dp"
            android:background="#555"
            android:layout_marginLeft="2.5dp"
            android:layout_marginRight="2.5dp"/>

        <Button
            android:id="@+id/info_btn"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:drawableTop="@drawable/ic_baseline_person_outline_24"
            android:paddingTop="20dp"
            android:fontFamily="@font/nanum"
            android:text="내정보" />


    </LinearLayout>


</LinearLayout>
