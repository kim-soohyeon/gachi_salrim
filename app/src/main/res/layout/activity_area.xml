<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SetAreaActivity"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/back_color"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/toolbarTheme">

    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/textArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="지역을 선택해주세요."
        android:fontFamily="@font/nanum"
        android:gravity="center"
        android:textSize="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/nanum"
        android:gravity="center"
        android:text="선택한 지역의 가맹점을 보여줍니다."
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/spinnerArea"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/roundedittext"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:prompt="@string/sido"
            android:layout_weight="10" />

        <Spinner
            android:id="@+id/spinnerArea2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/roundedittext"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:prompt="@string/dong"
            android:layout_weight="10" />

        <Button
            android:id="@+id/complete_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="0"
            android:background="@drawable/roundedittext"
            android:fontFamily="@font/nanum"
            android:text="완료" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="#555"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="2.5dp"
        android:layout_marginRight="2.5dp"/>

    <Button
        android:id="@+id/gps_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:fontFamily="@font/nanum"
        android:text = "    현재 위치로 설정"
        android:padding="10dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:drawableLeft="@drawable/ic_location_searching_black_24dp"/>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="#555"
        android:layout_marginLeft="2.5dp"
        android:layout_marginRight="2.5dp"/>

</LinearLayout>